{
  "name": "chrome-extension",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "npm run clear && NODE_ENV=development run-p dev:*",
    "dev:options": "npm run build:options -- -w",
    "dev:content": "npm run build:content -- -w",
    "dev:background": "npm run build:background -- -w",
    "build": "npm run clear && npm run build:options && npm run build:content && npm run build:background",
    "build:options": "vite build -c vite.config.options.ts",
    "build:content": "vite build -c vite.config.content.ts",
    "build:background": "vite build -c vite.config.background.ts",
    "zip": "pnpm run build && (cd ./extension; zip -r ../extension.zip .)",
    "clear": "rimraf extension/dist",
    "lint": "eslint 'src/**/*.{json,ts,js,vue}'"
  },
  "dependencies": {
    "@fontsource/readex-pro": "^4.5.6",
    "@mdi/js": "^6.6.96",
    "@types/color": "^3.0.3",
    "change-case": "^4.1.2",
    "color": "^4.2.1",
    "super-tiny-icons": "^0.4.0",
    "vue": "^3.2.31",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.18.9",
    "@types/chrome": "^0.0.180",
    "@types/node": "^17.0.23",
    "@vitejs/plugin-vue": "^2.2.4",
    "chokidar": "^3.5.3",
    "eslint": "^8.12.0",
    "esno": "^0.14.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.49.9",
    "typescript": "^4.6.3",
    "vite": "^2.8.6",
    "vite-plugin-windicss": "^1.8.3",
    "vue-tsc": "^0.33.9",
    "windicss": "^3.5.1"
  }
}
