{
  "type": "module",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "dev": "npm run clear && npm run copy-extension-dir && NODE_ENV=development run-p dev:options dev:content dev:background",
    "build": "npm run clear && npm run build:options && npm run build:content && npm run build:background && npm run copy-extension-dir",
    "zip": "npm run build && 7z a extension.zip ./dist/*",
    "dev:options": "npm run build:options -- -w",
    "dev:content": "npm run build:content -- -w",
    "dev:background": "npm run build:background -- -w",
    "build:options": "vite build -c vite.config.options.ts",
    "build:content": "vite build -c vite.config.content.ts",
    "build:background": "vite build -c vite.config.background.ts",
    "clear": "rimraf ./dist",
    "copy-extension-dir": "cp -T -r ./extension ./dist"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.3",
    "@mdi/js": "^7.4.47",
    "@types/chrome": "^0.0.258",
    "@types/color": "^3.0.6",
    "@types/node": "^20.11.5",
    "@unocss/eslint-config": "^0.58.3",
    "@unocss/reset": "^0.58.3",
    "@vitejs/plugin-vue": "^5.0.3",
    "color": "^4.2.3",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "sass": "^1.70.0",
    "super-tiny-icons": "^0.6.0",
    "typescript": "^5.3.3",
    "unocss": "^0.58.3",
    "vite": "^5.0.12",
    "vue": "^3.4.15",
    "vue-tsc": "^1.8.27"
  }
}
