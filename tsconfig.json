{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "types": [
      "node",
      "chrome",
      "vite/client"
    ],
    "paths": {
      "~/*": ["./src/*"],
    }
  },
  "exclude": ["dist", "node_modules"]
}
