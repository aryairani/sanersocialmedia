{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "chrome",
      "vite/client"
    ],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": ["dist", "node_modules"]
}
